<!DOCTYPE html>
<html>
<head>
  <title>Recruity</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
</head>
<body>
<div class = "container-fluid">
  <div class="row">
    <br>
    <br>
    <div class = "row">
    <% if user_signed_in? %>
      <div class = "col-xs-2" align="center">
        <span><%= link_to 'Cards', controller: :cards, action: :index %></span> | <span><%= link_to 'Stats', controller: :stats, action: :index %></span> | <span><%= link_to 'Hires', controller: :hires, action: :index %></span>
      </div>
      <% end %>

      <div class = "col-xs-8 rcorners2" style="text-align: center">

        <%= yield %>
      </div>
      <div class = "col-xs-2">
      </div>
    </div>
  </div>
</div>
</body>
</html>